@{
    ViewData["Title"] = "Add_User";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="accountheader">
    <h1 class="title">Your account</h1>
</div>

<hr />

@using (Html.BeginForm("Add_User_Action", "Admin", FormMethod.Post))
{
    <div class="accountinfo">
        <div class="row">
            <div class="column ordercolumn">
                <div class="form-group">
                    <label for="email">Username:</label>
                    <input class="form-control userinput" type="text" name="username" id="username" placeholder="Username" required>
                    <label for="email">Email:</label>
                    <input class="form-control userinput" type="email" name="email" id="email" placeholder="Email">
                    <label for="name">Name:</label>
                    <input class="form-control userinput" type="text" name="name" id="name" placeholder="Name">
                    <label for="isAdmin">Admin:</label>
                    <input class="form-control userinput" type="checkbox" name="isAdmin" id="isAdmin" value="0">
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-md-row-reverse">
        <button class="btn btn-primary editbutton" id="Save" type="submit">Save</button>
        <button class="btn btn-primary cancelbutton" onclick="history.back()">Cancel</button>
    </div>
}

<script>
    $(document).ready(function () {
        // Hate javascript but the simplist solution for this behaviour(i dont know how to use bootstrap)
        $("#isAdmin").change(function () {
            if ($(this).is(":checked")) {
                $(this).val(1);
            } else {
                $(this).val(0);
            }
        });

        $("#Save").click(function () {
            var inputuser, inputname;
            inputuser = $("#username").val();
            inputname = $("#name").val();

            if (inputuser == '') {
                alert("Please input a username");
                return false;
            }

            if (inputuser.length > 30) {
                alert("Username can't be longer than 30 characters");
                return false;
            }

            if (inputname == '') {
                alert("Please input a name");
                return false;
            }

            if (inputname.length > 40) {
                alert("Name can't be longer than 40 characters");
                return false;
            }

            const response = confirm("Confirm changes?")

            if (response == false) {
                return false;
            }
        });
    });
</script>
