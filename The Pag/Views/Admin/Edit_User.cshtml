@{
    ViewData["Title"] = "Edit account";
}

<div class="accountheader">
    <h1 class="title">Your account</h1>
</div>

<hr />

<form class="accountform">
    <div class="accountinfo">
        <div class="row">
            <div class="column ordercolumn">
                <div class="form-group">
                    <input class="form-control userinput" type="text" placeholder="Username" value="userName">
                    <input class="form-control userinput" type="text" placeholder="Email" value="userEmail">
                    <input class="form-control userinput" type="text" placeholder="Name" value="userProperName">
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-md-row-reverse">
        <a href="~/User/Account" class="btn btn-primary editbutton">Save</a>
        <a href="~/User/Account" class="btn btn-primary cancelbutton">Cancel</a>
    </div>
</form>