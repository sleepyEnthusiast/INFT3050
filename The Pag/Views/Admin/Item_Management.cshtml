@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Admin Item Management</h1>
    <h2>Ctrl + F to search</h2>
    <div class="p-3">
    <a class="btn btn-primary" href="~/Admin/Add_Item/1">Add Book</a>
    <a class="btn btn-primary" href="~/Admin/Add_Item/2">Add Game</a>
    <a class="btn btn-primary" href="~/Admin/Add_Item/3">Add Movie</a>
    </div>
    <table class="table cataloguetable">
        <thead>
            <tr>
                <!-- Table headers -->
                <th>Product Name</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Published</th>
                <th>Updated By</th>
                <th>Last Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product item in ViewBag.prodlist)  // Builds table from database, checks for nulls/empty data
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Author</td>
                    <td>@item.Genre</td>
                    <td>@item.Published.Value.ToString("yyyy")</td>
                    <td>@item.LastUpdatedBy</td>
                    <td>@item.LastUpdated</td>
                    <td><a class="btn btn-primary" href="~/Admin/Edit_Item/@(item.Id)">Edit</a></td>
                    <td><a class="btn btn-primary" href="~/Admin/Delete_Item/@(item.Id)">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
