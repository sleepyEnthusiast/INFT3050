@{
    ViewData["Title"] = "Create an Account";
}
<!-- Need to adjust user input lengths to look symmetrical. -->
<form class="accountform"> <!-- Account creation form -->
    <h1 style="text-align: center;">Create an Account:</h1>
    <div class="form-group accountcreatelabel">
        <label for="">Email:</label>
        <input type="text" class="form-control userinput" id="inputEmail" placeholder="Email">
    </div>

    <div class="form-row"> <!-- Won't display them side by side on UI anymore. Needs fixing.-->
        <div class="form-group col-md-6 accountcreatelabel">
            <label for="">Username:</label>
            <input type="email" class="form-control userinput" id="inputUserName" placeholder="Email">
        </div>
        <div class="form-group col-md-6 accountcreatelabel">
            <label for="">Password:</label>
            <input type="password" class="form-control userinput" id="inputPassword" placeholder="Password">
        </div>
    </div>

    <div class="form-group accountcreatelabel">
        <label for="">Name:</label>
        <input type="text" class="form-control userinput" id="inputName" placeholder="Name">
    </div>

    <div class="form-group accountcreatelabel">
        <div class="form-check" style="margin-left: 15px;">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">I agree to the <a id="nothing" href="#"> PAG terms of service.</a> </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary createaccountbutton">Create Account</button>
</form>
<!-- Referenced from https://getbootstrap.com/docs/4.1/components/forms/ (bootstrap documentation) -->
