@{
    ViewData["Title"] = "Order History";
}

<form class="accountform">
    <div class="d-flex">
        <a href="~/User/Account" class="btn btn-primary backbutton">Back</a>
    </div>
    <div class="orderhistory">
        <h1>Order History</h1>
        <table class="table orderstable">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Address</th>
                    <th>Postcode</th>
                    <th>Suburb</th>
                    <th>State</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Item</td>
                    <td>Quantity</td>
                    <td>Address</td>
                    <th>Postcode</th>
                    <th>Suburb</th>
                    <th>State</th>
                    <th><a href="~/User/Order_Details" class="btn btn-primary">View Details</a></th>
                </tr>
            </tbody>
        </table>
    </div>
</form>
