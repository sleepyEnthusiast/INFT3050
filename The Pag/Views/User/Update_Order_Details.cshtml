@{
    ViewData["Title"] = "Update your Order";
}

<div class="accountheader">
    <h1 class="title">Username</h1> <!--Needs session state current user-->
</div>

<div class="d-flex">
    <a href="~/User/Order_Details" class="btn btn-primary backbutton">Back</a>
</div>

<hr />

<form class="accountform">
    <div class="accountinfo">
        <div class="row">
            <div class="column ordercolumn">
                <div class="form-group">
                    <input class="form-control userinput" type="text" placeholder="Item name" value="UserOrderedItem">
                    <input id="form1" min="1" name="quantity" value="1" type="number"
                        class="form-control form-control-sm pull-right" style="width: 50px;"/>
                </div>
                <input class="form-control userinput" type="text" placeholder="Email" value="UserEmail">
                <input class="form-control userinput" type="text" placeholder="Address" value="UserAddress" />
                <input class="form-control userinput" type="text" placeholder="Postcode" value="UserPostcode"/>
            </div>
            <div class="column ordercolumn">
                <input class="userinput form-control" type="text" placeholder="Suburb" value="UserSuburb">
                <input class="form-control userinput" type="text" placeholder="State" value="UserState">
                <input class="form-control userinput" type="text" placeholder="Phone Number" value="UserPhNumber">
            </div>
        </div>
    </div>
    <div class="d-flex flex-md-row-reverse">
        <a href="~/User/Order_Details" class="btn btn-primary editbutton">Save</a>
        <a href="~/User/Order_Details" class="btn btn-primary cancelbutton">Cancel</a>
    </div>
</form>