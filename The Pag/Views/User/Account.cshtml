@using The_Pag.Classes;
@{
    ViewData["Title"] = "Account";
}

<div class="accountheader">
    <h1 class="title">Your account</h1>
    @if (ViewBag.PatronOrUser)
    {
        <btn onclick="window.location.href='Order_History'" class="btn btn-primary viewordersbutton">View Orders</btn>
    }
</div> 

<hr />

@if (CookieConfirm.HavePermission() == 3)
{
    <div class="text-center">
        <a class="btn btn-primary editbutton" asp-area="" asp-controller="Admin" asp-action="Item_Management">Item Management</a>
        <a class="btn btn-primary editbutton" asp-area="" asp-controller="Admin" asp-action="User_Management">User Management</a>
        <a class="btn btn-primary editbutton" asp-area="" asp-controller="Admin" asp-action="Patron_Management">Patron Management</a>
    </div>
}else
{
    <div></div>
}
<form class="accountform"> 
    <div class="accountinfo">
        <h2>Email:</h2>
            <p>@ViewBag.user.Email</p>
        <h2>Name:</h2>
            <p>@ViewBag.user.Name</p>
    </div>
    <div class="d-flex flex-md-row-reverse">
        <a class="btn btn-primary editbutton" href="~/Admin/Edit_User" role="button">Edit</a>
    </div>
</form>
