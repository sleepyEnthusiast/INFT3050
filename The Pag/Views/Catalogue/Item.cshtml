@{
    ViewData["Title"] = "Item";
}

<div class="itemform">
    @if (ViewBag.item != null && ViewBag.item.Count > 0)
    {
        var item = ViewBag.item[0];
        <h1 class="itemtitle title">@item.Name</h1>
        <br />
        <h2 class="itemprice">where is the price?</h2>
        <br />
        <h1 class="title">Description:</h1>
        <p class="itemdesc">@item.Description</p>
        <p class="itempublished">Publish Date: @item.Published</p>


        <button class="custombutton">ADD TO CART</button>
    }
    else
    {
        <p>Item not found</p>
    }
</div>
