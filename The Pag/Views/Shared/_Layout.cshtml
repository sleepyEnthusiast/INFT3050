<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The_Pag</title>
    <link rel="stylesheet" href="~/lib/bootstrap/twitter-bootstrap/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Views/Shared/_Layout.cshtml.css" asp-append-version="true" /> <!--This link isn't working-->

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The_Pag</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--All temporary links:-->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalogue" asp-action="Catalogue">Catalogue</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalogue" asp-action="Item">Item</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Account">Account</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Account_Create">Account Creation</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Order_Details">Order Details</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Order_History">Order History</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Update_Order_Details">Update Order</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Edit_Item">Edit Item</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Edit_User">Edit User</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Item_Management">Item Management</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="User_Management">User Management</a>
                            <input type="text" placeholder="Search.."> <!--Temporary search bar for presentation purposes-->
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalogue" asp-action="Cart">Cart</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="imgheader">
            <h1>Image Header</h1> <!--Header for image (wireframes for reference)-->
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - The_Pag - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
